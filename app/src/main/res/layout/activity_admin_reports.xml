<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgfinal"
    tools:context=".Admin.Admin_Reports">
    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="630dp"
        android:layout_marginTop="55dp"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="45dp"
        android:background="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:textStyle="bold|normal|italic"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="171dp"
                android:layout_height="120dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/login"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:text="Reports"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold|normal|italic" />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total number of registered members"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold|normal|italic"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" hostel students "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold|normal|italic"
                    />


                <TextView
                    android:id="@+id/thostel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold|normal|italic"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="students:"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold|normal|italic"
                    />

                <TextView
                    android:id="@+id/tstud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="69dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold|normal|italic"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teachers:"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold|normal|italic"
                    />

                <TextView
                    android:id="@+id/tteach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="69dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold|normal|italic"
                    />

            </LinearLayout>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total number of payments"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold|normal|italic"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" hostel student payments :"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold|normal|italic"
                    />

                <TextView
                    android:id="@+id/thpayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="49dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold|normal|italic"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" hostel student pending payments :"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold|normal|italic"
                    />

                <TextView
                    android:id="@+id/thpenpayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold|normal|italic"
                    />

            </LinearLayout>






        </LinearLayout>
    </androidx.cardview.widget.CardView>





</LinearLayout>