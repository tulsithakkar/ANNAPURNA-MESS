<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgfinal"
    tools:context=".Users.Contactus">

    <androidx.cardview.widget.CardView
        android:layout_width="342dp"
        android:layout_height="600dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="45dp"
        android:background="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:textStyle="bold|normal|italic"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="171dp"
                android:layout_height="120dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/login"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/black"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:text="Contact Details"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold|normal|italic"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:text="Annapurna Mess"
                android:textSize="30dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/baseline_location_on_24"
                android:text="139, CHARUSAT Campus, Highway, Off, Nadiad - Petlad Rd, Changa, Gujarat 388421"
                android:textSize="18dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:text="annapurnaMess@gamil.com"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/baseline_phone_24"
                android:text="9879438045"
                android:textSize="20dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>